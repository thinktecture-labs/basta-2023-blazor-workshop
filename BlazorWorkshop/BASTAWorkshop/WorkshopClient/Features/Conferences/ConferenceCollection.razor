@page "/conferences/overview"

<PageTitle>Conference Overview</PageTitle>

<MudDataGrid Class="ma-6" Items="@_conferences" Loading="_isLoading">
    <Columns>
        <PropertyColumn Property="x => x.Title" Title="Titel" />
        <TemplateColumn CellClass="d-flex justify-end">
            <CellTemplate>
                <MudIconButton Color="Color.Primary" Icon="@Icons.Material.Filled.RemoveRedEye" OnClick="@(() => NavigateToDetails(context.Item.Id))"></MudIconButton>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>

@if (!_isLoading && !_conferences.Any())
{
    <MudAlert Severity="Severity.Info">Keine Konferenzen gefunden.</MudAlert>
}
